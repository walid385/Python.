def fib(n):
    if n < 1:
        return 0
    else:
        fa = 0
        fb = 1
        for i in range (n-1):
            fa, fb = fb, fa +fb
            print (fa, fb)
            
fib(1)

---------------------------------------------------------
!!!!!  better solution !!!!!!!!
---------------------------------------------------------
def fibr(n):
    if n <= 0:
        return 0
    elif n == 1:
        return 1
    else:
        return fibr(n-2) + fibr(n-1)

print(fib(10), fibr(10))
